Zad 1

using System;

class Program {
  public static void Main (string[] args) {
    for (int i = 1; i <= 30; i++)
{
    Console.WriteLine("Dzień {0}",i);
            
}
    Console.WriteLine("pętla została zakonczona!");
Console.ReadKey();
  }
}

Zad 2

using System;

class Program {
  public static void Main (string[] args) {
    for (int i = 1 ; i <= 100 ; i++)
     if ( i % 2 == 0 )
     {
        Console.WriteLine("");
     } 
       else
       {
          Console.WriteLine( i * i );
       }
     Console.WriteLine("Pętla zakączona !");
    Console.ReadKey();
  }
}

